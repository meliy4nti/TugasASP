@page
@model AbsenOnline.Page.MahasiswaModel
@{
    ViewData["Title"] = "Add mahasiswa";
}
<h4>Add Mahasiswa</h4>
<hr />
<div class="row">
<div class="col-md-4">
<form method="post">
<div asp-validation-summary="ModelOnly" class="test-danger"></div>
<div class="from-group">
<label asp-for="Mhs.Nama" class="control-label"></label>
<input asp-for="Mhs.Nama" class="form-control" />
<span asp-validation-for="Mhs.Nama" class="text-danger"></span>
</div>
<div class="for-group">
<label asp-for="Mhs.Kelas" class="control-label"></label>
<input asp-for="Mhs.Kelas" class="form-control" />
<span asp-validation-for="Mhs.Kelas" class="text-danger"></span>
</div>
<div class="for-group">
<label asp-for="Mhs.TempatLahir" class="control-label"></label>
<input asp-for="Mhs.TempatLahir" class="form-control" />
<span asp-validation-for="Mhs.TempatLahir" class="text-danger"></span>
</div>
<div class="for-group">
<label asp-for="Mhs.TglLahir" class="control-label"></label>
<input asp-for="Mhs.TglLahir" class="form-control" />
<span asp-validation-for="Mhs.TglLahir" class="text-danger"></span>
</div>
<div class="for-group">
<label asp-for="Mhs.tinggiBadan" class="control-label"></label>
<input asp-for="Mhs.tinggiBadan" class="form-control" />
<span asp-validation-for="Mhs.tinggiBadan" class="text-danger"></span>
</div>
<div class="for-group">
<label asp-for="Mhs.Hp" class="control-label"></label>
<input asp-for="Mhs.Hp" class="form-control" />
<span asp-validation-for="Mhs.Hp" class="text-danger"></span>
</div>
<div class="form-group">
<input type="submit" value="Simpan" class="btn btn-primary" />
</div>
</form>
</div>
</div>


<h4>Data Hasil Inputan<br></h4>
@if(TempData["namaMahasiswa"] != null)
{
<br>
<div>
@TempData["namaMahasiswa"] <br>
@TempData["kelasMahasiswa"] <br>
@TempData["tempatMahasiswa"] <br>
@TempData["tglMahasiswa"] <br>
</div>
}
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}